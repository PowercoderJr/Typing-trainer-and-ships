<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane fx:controller="typingtrainer.MainScene.MainSceneController" xmlns:fx="http://javafx.com/fxml" fx:id="pane" alignment="CENTER">
        <columnConstraints>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints minWidth="400" halignment="CENTER"/>
                <ColumnConstraints minWidth="100"/>
        </columnConstraints>
        <rowConstraints>
                <RowConstraints minHeight="150"/>
        </rowConstraints>
        <children>
                <Label text="1" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label text="2" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label text="3" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label text="4" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <ImageView fx:id="logoImg" fitHeight="100" fitWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0"  GridPane.halignment="CENTER">
                        <Image url="@logo.png"/>
                </ImageView>
                <Label fx:id="practiceModeLabel" text="ПРАКТИКА" onMouseClicked="#onPracticeModeLabelClicked" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label fx:id="pvpModeLabel" text="БИТВА" onMouseClicked="#onLabelClicked" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="authorsLabel" text="АВТОРЫ" onMouseClicked="#onLabelClicked" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label fx:id="exitLabel" text="ВЫХОД" onMouseClicked="#onExitLabelClicked" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        </children>
</GridPane>